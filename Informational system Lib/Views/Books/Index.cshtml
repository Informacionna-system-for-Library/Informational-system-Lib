@model IEnumerable<Informational_system_Lib.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<a href="/Home/HomePage2">Към главното меню</a>

<h1>Книги</h1>

<p>
    <a asp-action="Create">Добави нов</a>
</p>
<form method="get" asp-action="Index">
    <p>
        <input type="search" placeholder="Въведи име на книга или автор..." value="@ViewData["Getbooksdetails"]" name="BooksSearch" style="width:500px;" />
        <input type="submit" value="Търсене" class="btn btn-primary" />
        <a asp-action="Index">Показване на всички</a>
    </p>

</form>
<table class="table" style="border-color:black">
    <thead style="border-color:black">
        <tr style="border-color:black">
            <th>
                Заглавие
            </th>
            <th>
                Автор
            </th>
            <th>
                Жанр
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Kolichestvo)*@
                Количество
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Zaglavie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Avtor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Janr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kolichestvo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdBook">Редактиране</a> |
                    <a asp-action="Details" asp-route-id="@item.IdBook">Детайли</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdBook">Изтриване</a>
                </td>
            </tr>
        }
    </tbody>
</table>
